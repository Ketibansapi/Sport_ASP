@model SportTransfer4.ViewModels.TransferFormViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Transfers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Transfer.Name)
        @Html.TextBoxFor(m => m.Transfer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Transfer.ReleaseDate)
        @Html.TextBoxFor(m => m.Transfer.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Transfer.GenreId)
        @Html.DropDownListFor(m => m.Transfer.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Transfer.NumberInStock)
        @Html.TextBoxFor(m => m.Transfer.NumberInStock, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Transfer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}
